<Window x:Class="File_2_uIP_Converter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="File 2 uIP Converter" Height="170" Width="400" ShowInTaskbar="False" ResizeMode="CanMinimize">
    <Grid Margin="0,0,4,0">
        <Button Content="Input" HorizontalAlignment="Left" Margin="293,19,0,0" VerticalAlignment="Top" Width="75" Click="Input_Click" Height="24"/>
        <Button Content="Output" HorizontalAlignment="Left" Margin="293,58,0,0" VerticalAlignment="Top" Width="75" Height="23" Click="Output_Click"/>
        <Button Content="Convert" HorizontalAlignment="Left" Margin="293,98,0,0" VerticalAlignment="Top" Width="75" Click="Convert_Click" />
        <TextBox x:Name="input_TB" HorizontalAlignment="Left" Height="23" Margin="10,20,0,0" TextWrapping="Wrap" Text="Select a file..." VerticalAlignment="Top" Width="253" IsEnabled="False"/>
        <TextBox x:Name="output_TB" HorizontalAlignment="Left" Height="23" Margin="10,58,0,0" TextWrapping="Wrap" Text="Select a file..." VerticalAlignment="Top" Width="253" IsEnabled="False"/>
        <Label Content="Result:" HorizontalAlignment="Left" Margin="10,95,0,0" VerticalAlignment="Top"/>
        <Label x:Name="result_LBL" Content="" HorizontalAlignment="Left" Margin="60,95,0,0" VerticalAlignment="Top" Width="203"/>

    </Grid>
</Window>

